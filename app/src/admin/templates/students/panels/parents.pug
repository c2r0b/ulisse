      .in_group(label="{{ 'sex' | translate }}")
        br
        select(ng-model='$e[1].sex')
          option
          option(value='1') M
          option(value='0') F
    .fifty
      .in_group(label="{{ 'tax_code' | translate }}")
        input(type='text', ng-model='$e[1].tax_code')
    .clear
    .in_group(label="{{ 'birthday' | translate }}")
      input(type='date', ng-model='$e[1].birthday', format-date='')

    .fifty
      .in_group(label="{{ 'telephone' | translate }}")
        input(type='tel', ng-model='$e[1].telephone')

