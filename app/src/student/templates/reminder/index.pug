section(ng-init="sort=['date',true]")
  article
    h1(translate='reminders')
  .container
    no-data(ng-if='!!!data.length')
    article(ng-if='!!data.length')
      table.data_grid
        tr
          td.little
            icn(n='calendar-o')
            sort(by='date')
          td.title
            input(placeholder="{{ 'teacher' | translate }}",
									ng-model='query.teacher')
            sort(by='teacher')
          td
        tr(ng-repeat='reminder in data\
        | orderBy	: sort[0]	:	sort[1]\
        | filter		:	query')
          td.little.date
            span(ng-bind="reminder.date | date: 'd'")
            span(ng-bind="reminder.date | date: 'MMM'")
          td.title
            b(ng-bind='reminder.teacher')
          td.no-align(ng-bind='reminder.text')
