section(ng-init="sort=['date',true]")
  article
    h1(translate='arguments')
  .container
    no-data(ng-if='!!!data.length')
    article(ng-if='!!data.length')
      table.data_grid
        tr
          td.little
            icn(n='calendar-o')
            sort(by='date')
          td.title
            input(placeholder="{{ 'subject' | translate }}",
									ng-model='query.subject')
            sort(by='subject')
          td
        tr(ng-repeat='argument in data\
        | orderBy: sort[0]:sort[1]\
        | filter:  query')
          td.little.date
            span(ng-bind="argument.date | date: 'd'")
            span(ng-bind="argument.date | date: 'MMM'")
          td.title
            b(ng-bind='argument.subject')
          td.no-align(ng-bind='argument.text')
