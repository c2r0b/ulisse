.panel(data-title="{{'justified-absence' | translate}}")
  h2
    span(translate='add-justified-absence')
    | ?
  p(translate='add-justified-absence-info')

  .in_group(label="{{ 'justification' | translate }}")
    textarea(ng-model='justification', draggable='false', rows='1')

  .panel-footer
    .btn.close(ng-click='justifiedAbsence()', translate='add')
    .btn.grey(ng-click='panel = "time-options"', translate='cancel')

  .discard-btn(ng-click='closePanel()')
