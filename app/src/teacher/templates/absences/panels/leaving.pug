.panel(data-title="{{'leaving' | translate}}")
  h2(translate='time')
  input(type='number', ng-model='hour', min='0', max='24', style='width:70px')
  | Â :
  input(type='number', ng-model='minutes', min='0', max='55', step='5', style='width:70px')
  .clear
  br
  .checkbox
    input#checkboxInput(type='checkbox', ng-model='justify')
    label(for='checkboxInput')

  span(translate='justify')
  .clear(ng-show='justify')
  br(ng-show='justify')

  .in_group(ng-show='justify', label="{{ 'justification' | translate }}")
    textarea(ng-model='justification', rows='2')

  .panel-footer
    .btn.close(translate='confirm', ng-click='addLeaving()')
    .btn.grey(ng-click='panel = "time-options"', translate='cancel')

  .discard-btn(ng-click='closePanel()')
