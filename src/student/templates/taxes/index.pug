section(ng-init="sort=['paid',true]")
  article
    h1(translate='taxes')
  .container
    no-data(ng-if='!!!data.length')
    article(ng-if='!!data.length')
      .fifty
        h2
          icn(n='check')
          font(translate='paid')
        table.data_grid
          tr
            td(translate='description')
            td.subject(translate='amount')
          tr(ng-repeat='tax in data | filter: { paid: 1 }')
            td(ng-bind='tax.description')
            td.subject
              span(ng-bind='tax.amount')
              |  €
      .fifty
        h2
          icn(n='close')
          font(translate='non-paid')
        table.data_grid
          tr
            td(translate='description')
            td.subject(translate='amount')
          tr(ng-repeat='tax in data | filter: { paid: 0 }')
            td(ng-bind='tax.description')
            td.subject
              span(ng-bind='tax.amount')
              |  €
      .clear
