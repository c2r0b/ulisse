section(ng-init="sort=['date',true]")
  article
    h1(translate='notes')
  .container
    no-data(ng-if='!!!data.length')
    article(ng-if='!!data.length')
      table.data_grid
        tr
          td.little
            icn(n='calendar-o')
            sort(by='date')
          td.title
            input(placeholder="{{ 'teacher' | translate }}",
									ng-model='query.teacher')
            sort(by='teacher')
          td
        tr(ng-repeat='note in data | orderBy:sort[0]:sort[1]',
					 ng-click='select(note)')
          td.little.date
            span(ng-bind="note.date | date: 'd'")
            span(ng-bind="note.date | date: 'MMM'")
          td.title
            b(ng-bind='note.teacher')
          td.no-align(ng-bind='note.text')
