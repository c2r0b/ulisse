.panel(data-title="{{ 'new' | translate }}")

  .in_group(label="{{ 'date' | translate }}")
    input(type='date',
          ng-model='$n.date',
          ng-value='today')

  .in_group(label="{{ 'title' | translate }}")
    input(type='text',
          ng-model='$n.title')

  .in_group(label="{{ 'content' | translate }}")
    textarea(draggable='false',
             rows='3',
             ng-model='$n.content')

  .panel-footer
    .btn.close(translate='save', ng-click='add()')
