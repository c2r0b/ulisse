.panel(data-title="{{ 'edit' | translate }}")
  .fifty
    .in_group(label="{{ 'teacher' | translate }}")
      br
      select(ng-model='editedSubject.teacher_id')
        option(ng-repeat='teacher in $e.schoolTeachers',
               ng-value='teacher.id',
               ng-selected='editedSubject.teacher_id == teacher.id',
               ng-bind='teacher.name')
  .fifty
    .in_group(label="{{ 'subject' | translate }}")
      input(type='text', ng-model='editedSubject.name')
  .panel-footer
    .btn.close(translate='save',
               ng-click='editSubject()',
               data-panel='subjects')
    .btn.grey.close(translate='cancel', data-panel='subjects')
