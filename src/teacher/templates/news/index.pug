section(ng-init="sort=['date',true]")
  article
    h1(translate='news')
  .container
    no-data(ng-if='!!!data.length')
    article(ng-if='!!data.length')
      table.data_grid
        tr
          td.little
            icn(n='calendar-o')
            sort(by='date')
          td.title(translate='title')
          td
        tr(ng-repeat='news in data | orderBy:sort[0]:sort[1]')
          td.little.date
            span(ng-bind="news.date | date: 'd'")
            span(ng-bind="news.date | date: 'MMM'")
          td.title
            b(ng-bind='news.title')
          td(ng-bind='news.content')
