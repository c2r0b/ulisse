panel(g-type='confirm',
			p-name='sign',
			p-bar='false',
			title='sign',
			msg='confirm-signature',
			callback='sign()')

section(ng-init="sort=['date',true]")
  article
    .right
      .option-btn(ng-click='showPanel("sign")')
        icn(n='pencil')
        span(translate='sign')
    h1(translate='signatures')
  .container
    no-data(ng-if='!!!data.length')
    article(ng-if='!!data.length')
      table.data_grid
        tr
          td.title
            icn(n='calendar-o')
            span(translate='date')
            sort(by='date')
          td.title(translate='time')
          td
        tr(ng-repeat='el in data | orderBy:sort[0]:sort[1]')
          td.title(ng-bind="el.date | date: 'd MMMM yyyy'")
          td.title(ng-bind='el.time')
          td
